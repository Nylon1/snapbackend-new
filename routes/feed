// At top alongside other imports:
const express = require('express');
const router  = express.Router();
const Content = require('../models/Content');

// Fetch approved content and render feed page (EJS, static HTML, or JSON)
router.get('/feed', async (req, res) => {
  try {
    // Grab all approved content documents
    const items = await Content.find({ status: 'approved' }).sort('-createdAt');

    // If you have a server-side template:
    // return res.render('feed', { items });

    // Or serve JSON for a client-side SPA:
    return res.json({ success: true, items });
  } catch (err) {
    console.error('ðŸ›‘ /feed error:', err);
    return res.status(500).json({ success: false, message: 'Failed to load feed' });
  }
});

module.exports = router;
